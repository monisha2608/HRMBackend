@using HRM.Backend.Models
@model HRMBackend.Areas.HR.Controllers.OnboardingController.PlanDetailsVM

@{
    ViewData["Title"] = "Onboarding";
    var total = Model.Tasks.Count;
    var done = Model.Tasks.Count(t => t.IsCompleted);
    var pct = total == 0 ? 0 : (int)Math.Round(100.0 * done / total);
}

<div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <div>
        <h2 class="onboard-title mb-1">
            Onboarding – @Model.Plan.CandidateName
        </h2>
        <div class="onboard-subtitle">
            Start: @Model.Plan.StartDate.ToLocalTime().ToString("MMM dd, yyyy")
            @if (Model.Plan.ApplicationId.HasValue)
            {
                @: • Application #@Model.Plan.ApplicationId
            }
        </div>
    </div>

    <a asp-area="HR" asp-controller="Onboarding" asp-action="Index"
       class="btn btn-outline-dark rounded-pill px-4">
        Back to list
    </a>
</div>

<div class="row g-4">
    <!-- LEFT: Progress + Tasks table -->
    <div class="col-lg-8">
        <div class="hr-card mb-3">
            <div class="fw-semibold mb-2 d-flex justify-content-between align-items-center">
                <span>Overall Progress</span>
                <span class="text-muted small">
                    @pct% • @done / @total tasks completed
                </span>
            </div>
            <div class="progress onboard-progress">
                <div class="progress-bar"
                     role="progressbar"
                     style="width:@pct%;"
                     aria-valuenow="@pct"
                     aria-valuemin="0"
                     aria-valuemax="100">
                </div>
            </div>
        </div>

        <div class="hr-card">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Assigned To</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Tasks.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center small-muted py-4">
                                    No tasks yet. Add the first task on the right.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var t in Model.Tasks)
                            {
                                var badgeClass = t.IsCompleted
                                ? "badge bg-success-subtle text-success-emphasis"
                                : "badge bg-warning-subtle text-warning-emphasis";

                                <tr>
                                    <td class="fw-semibold">@t.Name</td>
                                    <td>@(string.IsNullOrWhiteSpace(t.AssignedTo) ? "—" : t.AssignedTo)</td>
                                    <td>
                                        @(t.DueDate.HasValue
                                                                        ? t.DueDate.Value.ToLocalTime().ToString("MMM dd, yyyy")
                                                                        : "—")
                            </td>
                            <td>
                                <span class="@badgeClass">
                                    @(t.IsCompleted ? "Completed" : "Pending")
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="d-inline-flex gap-2">
                                    <!-- Toggle complete -->
                                    <form method="post"
                                          asp-area="HR"
                                          asp-controller="Onboarding"
                                          asp-action="ToggleTask"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="taskId" value="@t.Id" />
                                        <input type="hidden" name="planId" value="@Model.Plan.Id" />
                                        <input type="hidden" name="isCompleted" value="@(t.IsCompleted ? "false" : "true")" />
                                        <button type="submit"
                                                class="btn btn-sm @(t.IsCompleted ? "btn-outline-secondary" : "btn-success") rounded-pill px-3">
                                            @(t.IsCompleted ? "Mark Pending" : "Mark Done")
                                        </button>
                                    </form>

                                            <!-- Delete -->
                                            <form method="post"
                                                  asp-area="HR"
                                                  asp-controller="Onboarding"
                                                  asp-action="DeleteTask"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Delete this task?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="taskId" value="@t.Id" />
                                                <input type="hidden" name="planId" value="@Model.Plan.Id" />
                                                <button type="submit"
                                                        class="btn btn-sm btn-rose btn-bright rounded-pill px-3">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                                }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- RIGHT: Add Task panel -->
    <div class="col-lg-4">
        <div class="hr-card">
            <div class="mb-2">
                <h5 class="mb-0 fw-bold">Add Task</h5>
                <div class="small text-muted">
                    Define task, owner, and due date
                </div>
            </div>

            <form method="post"
                  asp-area="HR"
                  asp-controller="Onboarding"
                  asp-action="AddTask">
                @Html.AntiForgeryToken()
                <input type="hidden" name="planId" value="@Model.Plan.Id" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Task Name</label>
                    <input name="name"
                           class="form-control"
                           placeholder="e.g., Collect signed contract" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Assigned To (optional)</label>
                    <input name="assignedTo"
                           class="form-control"
                           placeholder="e.g., HR Coordinator" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Due Date (optional)</label>
                    <input type="date"
                           name="dueDate"
                           class="form-control" />
                </div>

                <button type="submit"
                        class="btn btn-blue btn-bright w-100">
                    Add Task
                </button>
            </form>
        </div>
    </div>
</div>
