@{
    ViewBag.Title = "HR Login";
}
<div class="min-vh-100 d-flex align-items-center justify-content-center bg-soft-grid position-relative">
    <!-- soft ambient blobs -->
    <div class="neon-blob neon-blob--pink"></div>
    <div class="neon-blob neon-blob--violet"></div>

    <div class="card hr-card p-4 p-md-5 w-100" style="max-width:540px; position:relative;">
        <div class="text-center mb-4">
            <h1 class="neon-title">
                XYZ <span class="text-glow">HR</span>
            </h1>

            <div class="small text-muted">Secure access for HR team members</div>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger shadow-sm">@ViewBag.Error</div>
        }

        <form method="post" asp-area="HR" asp-controller="Account" asp-action="Login" class="mt-3">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <div class="input-group glow-wrap">
                    <input name="email" type="email"
                           class="form-control glow-input border-0 shadow-sm"
                           placeholder="you@company.com" autocomplete="username" required />
                </div>
            </div>

            <div class="mb-2">
                <label class="form-label fw-semibold">Password</label>
                <div class="input-group glow-wrap">
                    <input id="password" name="password" type="password"
                           class="form-control glow-input border-0 shadow-sm"
                           placeholder="••••••••" autocomplete="current-password" required />
                    <button type="button" class="btn border-0 shadow-none"
                            id="togglePassword" tabindex="-1" aria-label="Show password"
                            style="background:transparent; transition:all 0.3s ease;">
                        <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="28" height="28"
                             viewBox="0 0 16 16" fill="#ff4d2d"
                             style="filter: drop-shadow(0 0 6px rgba(255,77,4));
                                    transition: all 0.3s ease;">
                            <path d="M1 8s3-5 7-5 7 5 7 5-3 5-7 5-7-5-7-5Z" />
                            <circle cx="8" cy="8" r="2.5" />
                        </svg>
                    </button>
                </div>
            </div>

            <button class="btn btn-bright btn-orangered w-100 py-2 neon-btn">
                Sign in
            </button>
        </form>
    </div>
</div>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password");

    const eyeSVG = `
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28"
           viewBox="0 0 16 16" fill="#ff4d2d"
           style="filter: drop-shadow(0 0 6px rgba(255,77,45,0.7));
                  transition: all 0.3s ease;">
        <path d="M1 8s3-5 7-5 7 5 7 5-3 5-7 5-7-5-7-5Z"></path>
        <circle cx="8" cy="8" r="2.5"></circle>
      </svg>`;

    const eyeSlashSVG = `
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28"
           viewBox="0 0 16 16" 
           style="filter: drop-shadow(0 0 6px rgba(255,77,45,0.7));
                  transition: all 0.3s ease;">
        <path d="M1 8s3-5 7-5 7 5 7 5-3 5-7 5-7-5-7-5Z"></path>
        <circle cx="8" cy="8" r="2.5"></circle>
        <line x1="2" y1="2" x2="14" y2="14" stroke="#ff4d2d" stroke-width="1.8" stroke-linecap="round"></line>
      </svg>`;

    togglePassword.addEventListener("click", function () {
        const isPassword = passwordInput.getAttribute("type") === "password";
        passwordInput.setAttribute("type", isPassword ? "text" : "password");
        this.setAttribute("aria-label", isPassword ? "Hide password" : "Show password");
        this.innerHTML = isPassword ? eyeSlashSVG : eyeSVG;
    });

    // Neon hover effect
    togglePassword.addEventListener("mouseenter", function () {
        this.querySelector("svg").style.filter = "drop-shadow(0 0 12px rgba(255,77,45,1))";
        this.querySelector("svg").setAttribute("fill", "#ff6a3c");
        this.style.transform = "scale(1.2)";
    });

    togglePassword.addEventListener("mouseleave", function () {
        this.querySelector("svg").style.filter = "drop-shadow(0 0 6px rgba(255,77,45,0.7))";
        this.querySelector("svg").setAttribute("fill", "#ff4d2d");
        this.style.transform = "scale(1)";
    });
</script>
