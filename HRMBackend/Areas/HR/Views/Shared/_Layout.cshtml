@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "HR";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title – HR Console</title>

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/hr.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar hr-nav">
        <div class="container">
            <a class="navbar-brand hr-brand" asp-area="HR" asp-controller="Dashboard" asp-action="Index">XYZ HR Console</a>
            <ul class="navbar-nav ms-auto flex-row gap-3">
                <li class="nav-item"><a class="nav-link" asp-area="HR" asp-controller="Jobs" asp-action="Index">Jobs</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="HR" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="nav-item">
                    <form method="post" asp-area="HR" asp-controller="Account" asp-action="Logout">
                        <button class="btn btn-sm btn-outline-light">Sign out</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container my-4">
        @if (TempData["Msg"] is string msg)
        {
            <div class="alert alert-ghost mb-3">@msg</div>
        }
        @if (TempData["Err"] is string err)
        {
            <div class="alert alert-danger mb-3">@err</div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
