@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "HR";
    string curArea = (ViewContext.RouteData.Values["area"] as string) ?? "";
    string curController = (ViewContext.RouteData.Values["controller"] as string) ?? "";
    string curAction = (ViewContext.RouteData.Values["action"] as string) ?? "";

    bool IsActive(string area, string controller, string? action = null)
    {
        var ok = string.Equals(curArea, area, StringComparison.OrdinalIgnoreCase)
                 && string.Equals(curController, controller, StringComparison.OrdinalIgnoreCase);
        if (!ok) return false;
        if (action == null) return true;
        return string.Equals(curAction, action, StringComparison.OrdinalIgnoreCase);
    }
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title – HR Console</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/hr.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar hr-nav shadow-sm py-3">
        <div class="container d-flex justify-content-between align-items-center flex-wrap">
            <a class="navbar-brand fw-bold fs-4 text-white"
               asp-area="HR" asp-controller="Dashboard" asp-action="Index">
                XYZ HR Console
            </a>

            <ul class="navbar-nav flex-row align-items-center gap-3">
                <li class="nav-item">
                    <a class="nav-link hr-nav-pill @(IsActive("HR", "Jobs") ? "active" : "")"
                       asp-area="HR" asp-controller="Jobs" asp-action="Index">Jobs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link hr-nav-pill @(IsActive("HR", "Dashboard") ? "active" : "")"
                       asp-area="HR" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link hr-nav-pill @(IsActive("HR", "Admin", "CreateHr") ? "active" : "")"
                       asp-area="HR" asp-controller="Admin" asp-action="CreateHr">Create HR</a>
                </li>
                <li class="nav-item">
                    <form method="post" asp-area="HR" asp-controller="Account" asp-action="Logout">
                        <button class="btn btn-sm logout-btn fw-semibold px-3 py-1">Sign out</button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container my-4">
        @if (TempData["Msg"] is string msg)
        {
            <div class="alert alert-ghost mb-3">@msg</div>
        }
        @if (TempData["Err"] is string err)
        {
            <div class="alert alert-danger mb-3">@err</div>
        }
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
