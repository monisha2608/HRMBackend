<h2 class="mb-4">Dashboard</h2>
<div class="row g-3 mb-4">
    <div class="col-md-4"><div class="card p-4"><div class="text-muted">Total Jobs</div><div class="display-6">@ViewBag.TotalJobs</div></div></div>
    <div class="col-md-4"><div class="card p-4"><div class="text-muted">Total Applications</div><div class="display-6">@ViewBag.TotalApps</div></div></div>
    <div class="col-md-4">
        <div class="card p-4">
            <div class="text-muted">By Status</div>
            @if (ViewBag.ByStatus is IDictionary<string, int> dict && dict.Count > 0)
            {
                <ul class="mb-0">@foreach (var kv in dict){
                <li>@kv.Key: @kv.Value</li>
            }
</ul>
                        }
                        else
            {

                <div class="text-secondary">No data</div>
            }
        </div>
    </div>
</div>

<a class="btn btn-bright btn-lime" asp-area="HR" asp-controller="Jobs" asp-action="Index">Manage Jobs</a>
